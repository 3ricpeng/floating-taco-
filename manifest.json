{
  "manifest_version": 3,
  "name": "Floating Taco",
  "version": "1.0",
  "description": "Runs on ServiceNow pages to add custom functionality.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://yum.service-now.com/incident.do*"],
      "js": ["incident.js", "buttons.js"],
      "css": ["styles.css"],
      "all_frames": true
    },
    {
      "matches": ["https://yum.service-now.com/kb_view.do*"],
      "js": ["kb.js", "buttons.js"],
      "css": ["styles.css"],
      "all_frames": true
    },
    {
      "matches": ["https://yum.service-now.com/ui_page.do*"],
      "js": ["landing.js", "buttons.js"],
      "css": ["styles.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Floating Taco"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon48.png", "icons/icon128.png"],
      "matches": ["https://yum.service-now.com/*"]
    }
  ]
}
